<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:id="@+id/id1">
    <!-- navigation -->

    <LinearLayout
            android:id="@+id/MonthDisplay"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#FFFF"
            android:orientation="horizontal">
        <!--menu selection -->




        <TextView
                android:id="@+id/mal_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:text="@string/current_date"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_weight="1"/>

        <!-- left navigation arrow -->
        <ImageButton

                android:id="@+id/b1"
                android:onClick="moveB"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
               android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_weight="1">
        </ImageButton>
        <!-- months -->
        <TextView
                android:id="@+id/curr_mnth"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="2"/>
        //current year
        <TextView
                android:layout_marginLeft="10sp"
                android:id="@+id/engyear"
                android:layout_width="8sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"

        />
        <!-- Right navigation arrow-->
        <ImageButton
                android:id="@+id/b2"
                android:onClick="moveF"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:src="@drawable/right"

                android:layout_weight="1"/>

        <!-- Malayalam year -->

        <TextView
                android:id="@+id/mal_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor=" #000"
                android:text="@string/current_malayalam_year"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="2"/>>

    </LinearLayout>
    <!-- week -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/sun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/sun"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/mon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/mon"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/tue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/tue"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/wed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/wed"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/thu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/thu"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/fri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/fri"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/sat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:text="@string/sat"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
    </LinearLayout>

    <!--date -->
        <android.support.v7.widget.GridLayout
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


        >
        <!-- Inflate multiple xml file here -->



    </android.support.v7.widget.GridLayout>


</LinearLayout>





